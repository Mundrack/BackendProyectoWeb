				{
					"name": "Register Owner",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Test de respuesta exitosa",
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"// Test de estructura de respuesta",
									"pm.test(\"Response has user and tokens\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('user');",
									"    pm.expect(jsonData).to.have.property('tokens');",
									"});",
									"",
									"// Guardar tokens automáticamente",
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"access_token\", jsonData.tokens.access);",
									"    pm.collectionVariables.set(\"refresh_token\", jsonData.tokens.refresh);",
									"    pm.collectionVariables.set(\"user_id\", jsonData.user.id);",
									"    console.log(\"Tokens guardados automáticamente\");",
									"}",
									"",
									"// Test de datos de usuario",
									"pm.test(\"User type is owner\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.user.user_type).to.eql('owner');",
									"});",
									"",
									"pm.test(\"User has email\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.user.email).to.be.a('string');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
